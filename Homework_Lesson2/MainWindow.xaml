            </StackPanel>



            <!-- recentin ici Resent && All Contacts -->
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="*"/>
