<Window x:Class="Homework_Lesson2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_Lesson2"
        mc:Ignorable="d"
        Title="Telegram" 
        Icon="/Images/telegram-app--v3.png"
        Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        BorderBrush="DeepSkyBlue"
        BorderThickness="2"
        Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <!-- +++ Telegram yazisi -->
            <Border BorderBrush="Gray" BorderThickness=" 0 0 0 2"/>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Images/telegram-app--v3.png" Stretch="Uniform"/>

                <Label Grid.Column="1"
                           Content="Telegram"
                           FontSize="26"
                           FontWeight="Bold" 
                           FontFamily="Arial"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>
            </Grid>


            <!-- +++ Name &&  Expander iconu -->
            <Border BorderBrush="Gray" Grid.Column="1" BorderThickness="0 0 0 2"/>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Expander -->
                <Label Grid.Column="1" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Padding="12">
                    <Image     HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Stretch="Uniform"
                               Source="/expand-arrow.png"/>
                </Label>


                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Column="0">
                    <!-- VM  -->
                    <Border Grid.Column="0"
                            BorderBrush="WhiteSmoke"
                            BorderThickness="1"
                            CornerRadius="25"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                        <Border.Background>
                            <LinearGradientBrush >
                                <GradientStop Color="ForestGreen" Offset="0"></GradientStop>
                                <GradientStop Color="Yellow" Offset="0"></GradientStop>
                                <GradientStop Color="Blue" Offset="1"></GradientStop>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Label
                                Margin="5 0 5 0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Grid.Column="0" 
                                FontWeight="Medium"
                                FontSize="20"
                                Foreground="#FAFBFC"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Content="VM"/>
                    </Border>

                    <!-- Name -->
                    <Label Grid.Column="1" 
                           Content="Vitaly Medvedev"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#44637C"
                           HorizontalContentAlignment="Right"
                           VerticalContentAlignment="Center"/>

                </StackPanel>
            </Grid>




            <!-- +++ Search -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="0 0 2 2 "/>
            <StackPanel Grid.Row="1" Grid.Column="0"
                  Background="Transparent"
                  Orientation="Horizontal">

                <Label VerticalContentAlignment="Center" 
                           HorizontalContentAlignment="Center">
                    <Image Stretch="Uniform"
                               Source="/Images/search.png"/>
                </Label>

                <TextBox Grid.Column="1"
                        Name="search"
                        BorderThickness="0"
                        Padding="4 0"  
                        Margin="0 4"
                        Foreground="LightGray"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
