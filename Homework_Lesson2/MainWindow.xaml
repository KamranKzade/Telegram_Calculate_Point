                               Foreground="WhiteSmoke"
                               FontWeight="Medium"
                               Margin="2"
                               Padding="5 0 5 0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"/>
                        </Border>


                    </StackPanel>
                    <Label Grid.Row="1" Grid.Column="2"
                           Background="#B3C2CC" 
                           Content="01:30 AM"
                           FontSize="10"
                           Foreground="SlateGray"
                           FontWeight="Medium"
                           Padding="5 0 0 20"

