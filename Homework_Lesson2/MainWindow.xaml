                    <Label Grid.Row="3" Grid.Column="2"
                           Content="01:30 AM"
                           FontSize="10"
                           Foreground="SlateGray"
                           FontWeight="Medium"
                           Padding="0 0 5 0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"/>
