                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Element 1-->
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Label VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                            <Image Source="/Images/female-teacher--v2.png"
