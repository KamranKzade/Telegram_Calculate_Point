                    <!-- +++ Time && message -->
                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <Label Content="01:30 AM"
                               FontSize="10"
                               Foreground="SlateGray"
                               FontWeight="Medium"
                               Padding="5 0 5 0"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>

                        <Border CornerRadius="5"
