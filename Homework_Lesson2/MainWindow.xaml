                        <Label Content="01:30 AM"
                               FontSize="10"
                               Foreground="SlateGray"
                               FontWeight="Medium"
                               Padding="5 0 5 0"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>

                        <Border CornerRadius="5"
                                Grid.Row="1"
                                Margin="0 0 5 5"
                                Padding="0 0 5 0"
                                VerticalAlignment="Center"
                                Background="Red"
                                HorizontalAlignment="Right">
                            <Label 
                               Content="2"
                               FontSize="8"
                               Background="Transparent"
                               Foreground="WhiteSmoke"
                               FontWeight="Medium"
                               Margin="2"
                               Padding="5 0 0 0"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center" />
                        </Border>


                    </StackPanel>
                    <Label Grid.Row="5" Grid.Column="2"
                           Content="01:30 AM"
                           FontSize="10"
                           Foreground="SlateGray"
                           FontWeight="Medium"
                           Padding="0 0 5 0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"/>
                    <Label Grid.Row="6" Grid.Column="2"
                           Content="01:30 AM"
                           FontSize="10"
                           Foreground="SlateGray"
                           FontWeight="Medium"
                           Padding="0 0 5 0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"/>

                    <Border  Grid.Row="1" BorderBrush="DimGray" BorderThickness=" 0 0 0 2"/>
                    <Border  Grid.Row="1" Grid.Column="1" BorderBrush="DimGray" BorderThickness=" 0 0 0 2"/>
                    <Border  Grid.Row="1" Grid.Column="2" BorderBrush="DimGray" BorderThickness=" 0 0 2 2"/>
                </Grid>

                <!-- +++ All Contacts -->
                <Border Grid.Row="2" BorderBrush="DimGray" BorderThickness="0 0 2 2"/>
                <Grid  Grid.Row="2" Background="Transparent">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" 
                           Content="All contacts"
                           VerticalContentAlignment="Center"
                           Foreground="DimGray"
                           FontSize="20"
                           Padding="5 0 0 0"
                           FontWeight="DemiBold"/>

                    <Label Grid.Column="1" 
                           Padding="16"
                           Margin="0 5 0 0">
                        <Image VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Source="/Images/chevron-right.png" 
                                   Stretch="Uniform"/>
                    </Label>

                </Grid>

                <!-- +++ Bosluq -->
                <Border Grid.Row="3" BorderBrush="DimGray" BorderThickness="0 0 2 0"/>

            </Grid>


            <!-- ++++ RecycleBin && Call -->
