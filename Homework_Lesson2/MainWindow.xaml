                        <Label Content="Of course mate"
                               FontSize="12"
                               HorizontalAlignment="Left"
                               Foreground="SlateGray"
                               FontWeight="Medium"
                               Padding="5 0 0 2"/>
                    </StackPanel>
                    <StackPanel Grid.Row="6" Grid.Column="1">
                        <Label Content="Elena Cooper"
                               FontSize="12"
                               Padding="0 0 0 5"
                               FontWeight="ExtraBold"
                               Foreground="DimGray"/>
                        <Label Content="Ok, I will be there"
                               HorizontalAlignment="Left"
                               FontSize="12"
                               Foreground="SlateGray"
                               FontWeight="Medium"
